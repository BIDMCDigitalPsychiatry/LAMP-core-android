            android:name="digital.lamp.sensor_core.Screen"
            android:exported="true" />
        <service
            android:name="digital.lamp.sensor_core.Accelerometer"
            android:exported="true" />
        <service
            android:name="digital.lamp.sensor_core.ActivityTransitions"
            android:exported="true" />
        <service
            android:name="digital.lamp.sensor_core.Gyroscope"
            android:exported="true" />
        <service
            android:name="digital.lamp.sensor_core.WiFi"
            android:exported="true" />
        <service
            android:name="digital.lamp.sensor_core.WiFi$BackgroundService"
            android:exported="true" />
        <service
            android:name="digital.lamp.sensor_core.Rotation"
            android:exported="true" />
        <service
            android:name="digital.lamp.sensor_core.Light"
            android:exported="true" />
        <service
            android:name="digital.lamp.sensor_core.Magnetometer"
